    "version": "2.0.0",
    "tasks": [
        {
            "label": "g++ build cpp program",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-std=c++11",
                "-stdlib=libc++",
                "-o",
                "${fileDirname}/a.out",
                "${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
    ]
}